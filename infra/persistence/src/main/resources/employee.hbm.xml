<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field">
	<class name="com.ecc.exercise8.Employee" 
		   table="employee">

		<id name="id" 
			column="id" 
			type="java.lang.Long">

			<generator class="increment"/>
		</id>

		<component name="name" 
				   class="com.ecc.exercise8.Name">

			<property name="firstName" 
					  column="first_name" 
					  type="java.lang.String"/>

			<property name="middleName" 
					  column="middle_name" 
					  type="java.lang.String"/>

			<property name="lastName" 
					  column="last_name" 
					  type="java.lang.String"/>
		</component>

		<property name="birthDate" 
				  column="birth_date" 
				  type="java.time.LocalDate"/>

		<property name="dateHired" 
				  column="date_hired" 
				  type="java.time.LocalDate"/>

		<property name="gwa" 
				  column="gwa" 
				  type="java.lang.Float"/>

		<property name="isEmployed" 
				  column="is_employed" 
				  type="java.lang.Boolean"/>
		
		<one-to-one class="com.ecc.exercise8.Address" 
					name="address" 
					lazy="false"
					cascade="all-delete-orphan"/>

		<set name="contacts"
			 cascade="all-delete-orphan"
			 inverse="true"
			 lazy="true">
		
			<key column="employee_id"/>
			<one-to-many class="com.ecc.exercise8.Contact"/>	 	
		 </set>

		<set name="roles"
		 	 table="employee_role"
		 	 lazy="true">
		 	  
			<key column="employee_id"/>
			<many-to-many class="com.ecc.exercise8.Role" 
						  column="role_id"/>
		</set>	
	</class>
</hibernate-mapping>